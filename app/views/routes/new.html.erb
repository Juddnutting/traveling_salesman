<div class='row'>
	<div class="col-md-6 col-md-offset-2">

		<h1> Create a Route </h1>
	
	<%= form_for @route do |f| %>
		<div class="form-group">
			<%=f.label :description, "Route Description" %>
			<%=f.text_field :description, class: "form-control" %>
		</div>
		<div class="form-group">
			<p> Paste in data with format "location, lat, long" like "Denver, 39.7, -104.99" </p>
			<%=f.text_area :input, size: "80x20" %> </div>
			<%=f.submit "Submit Coordinates", class: "btn btn-primary" %>
		</div>
	<%end%>
	</div>
</div>
